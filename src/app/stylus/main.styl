* {
  box-sizing : border-box
  padding : 0
  cursor : url("img/pen.png"),auto
  margin : 0
}
.menu
  position : absolute
  z-index : 5
  background-color : white
  top : 0
  left : -290px
  width : 300px
  border-right:10px solid #eee
  padding-right : 20px
  transition : left 0.3s ease
  &:hover

    border-right:1px solid #eee
    left : 0

.menu-item
  color : #333
  font-family : 'Microsoft YaHei'
  &:hover
     font-weight : bold

.canvas
  width : 100%
  height : 100%

.color
  position : fixed
  right : 0
  bottom : 0

  div
    float : left
    width : 50px
    height : 50px
    border : 2px solid #eee


.cleaner
  position : absolute
  top : 10px
  right : 10px
  padding : 10px
  font-size : 20px
  color : #666
  border : 1px solid #eee

  &:hover
    color : #333

.eraser
  position : absolute
  width : 50px
  height : 50px
  border-radius : 50%
  border : 1px solid #000000


.pages
  position : absolute
  top : 20px
  left : 50px

  .page
    margin-left : 5px
    color : black
    width : 30px
    height : 30px
    border-radius : 50%
    background-color : #efefef
    line-height : 30px
    text-align : center
    color : white
    float : left

.title
  position : absolute
  left : calc(50% - 100px)
  font-size : 32px
  opacity : 0.5
  top : 20px
  width : 300px
  text-align : center
  padding-bottom : 5px
  border-bottom : 1px solid #a4ee97



.editor
  border : 1px solid #eee
  margin : 40px
  font-size : 28px
  width : 70%
  float : left
  height : 100%
  min-height : 800px

  margin-top : 60px
.options
  position : absolute
  top : 30px
  left : 40px

  .option
    float : left
    margin-right : 10px
    border : 2px solid #00ff00
    padding : 3px 10px
    &:hover
      background-color #ffffaa





.frame
  width : 20%
  float : left
  margin-top : 60px
  height : 100%
  border : 1px solid #eee






.CodeMirror
  height  : 800px
